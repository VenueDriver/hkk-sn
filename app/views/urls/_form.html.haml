.panel-body
  - if @url.errors.any?
    #error_explanation
      %h2= "#{pluralize(@url.errors.count, "error")} prohibited this url from being saved:"
      %ul
        - @url.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    %label.col-sm-2.control-label{for: "url"} URL
    .col-sm-10
      = f.text_field :url, class: 'form-control', name: "url", placeholder: "http://...", type: "text"

  .form-group
    %label.col-sm-2.control-label{for: "unique_key"} Short Code
    .col-sm-10
      = f.text_field :unique_key, class: 'form-control', name: "unique_key", placeholder: "(optional, case insensitive) tiestopromo, nye2014, FREESTUFF", type: "text"

  .form-group
    %label.col-sm-2.control-label{for: "domain_names"} Domains
    .col-sm-10
      - @domains.each do |domain|
        = check_box_tag "domain_name[]", domain, @current_domain.nil? || @current_domain == domain, id: "domain_name_input_#{domain}"
        = label_tag :domain_name, domain, for: "domain_name_input_#{domain}"

  .panel.panel-default
    .panel-heading
      Google Analytics UTM parameters (optional)

    .panel-body
      - utm_help = 'https://support.google.com/analytics/answer/1033867'

      .form-group
        %label.col-sm-2.control-label{for: "utm_source"} Source
        .col-sm-10
          .input-group.input-group-sm
            = f.text_field :utm_source, class: 'form-control', name: 'utm_source', placeholder: 'referrer: google, citysearch, newsletter4', type: 'text'
            %span.input-group-addon
              %a{href: utm_help, target: 'utm_help'}
                %span.glyphicon.glyphicon-question-sign

      .form-group
        %label.col-sm-2.control-label{for: "utm_medium"} Medium
        .col-sm-10
          .input-group.input-group-sm
            = f.text_field :utm_medium, class: 'form-control', name: 'utm_medium', placeholder: 'marketing medium: cpc, banner, email', type: 'text'
            %span.input-group-addon
              %a{href: utm_help, target: 'utm_help'}
                %span.glyphicon.glyphicon-question-sign

      .form-group
        %label.col-sm-2.control-label{for: "utm_term"} Term
        .col-sm-10
          .input-group.input-group-sm
            = f.text_field :utm_term, class: 'form-control', name: 'utm_term', placeholder: 'identify the paid keywords: running+shoes', type: 'text'
            %span.input-group-addon
              %a{href: utm_help, target: 'utm_help'}
                %span.glyphicon.glyphicon-question-sign

      .form-group
        %label.col-sm-2.control-label{for: "utm_content"} Content
        .col-sm-10
          .input-group.input-group-sm
            = f.text_field :utm_content, class: 'form-control', name: 'utm_content', placeholder: 'use to differentiate ads: logolink, textlink', type: 'text'
            %span.input-group-addon
              %a{href: utm_help, target: 'utm_help'}
                %span.glyphicon.glyphicon-question-sign

      .form-group
        %label.col-sm-2.control-label{for: "utm_name"} Name
        .col-sm-10
          .input-group.input-group-sm
            = f.text_field :utm_name, class: 'form-control', name: 'utm_name', placeholder: 'use for keyword analysis: product, promo code, or slogan', type: 'text'
            %span.input-group-addon
              %a{href: utm_help, target: 'utm_help'}
                %span.glyphicon.glyphicon-question-sign