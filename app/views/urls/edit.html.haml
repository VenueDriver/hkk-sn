= form_for @url, url: shortener_shortened_url_url(@url), html: {class: 'form-horizontal', role: 'form'} do |f|

  .panel.panel-default
    .panel-heading
      %h3.panel-title Edit #{@url.domain_name} URL:

    .panel-body
      = render partial: 'form', locals: {f: f}

    .panel-footer
      %btn-toolbar.pull-right
        %a.btn.btn-default.btn-larget{href: root_path} Cancel
        %button.btn.btn-primary.btn-large{type: "submit"} Update URL
      .clearfix
      